:javascript
	// validate Training Onsite form on keyup and submit
	//initiate validator on load
	$(function() {
	// validate training onsite form on keyup and submit
		$("#training_request_class_form").validate({
		//set the rules for the field names
			rules: {
				"request_class[name]": {
					required: true,
					minlength: 2
				},
				"request_class[organisation]": {
					required: true,
					minlength: 2
				},
				"request_class[email]": {
					required: true,
					email: true
				},
				"request_class[course]": {
					required: true,
					minlength: 2
				},
				"request_class[location]": {
					required: true,
					minlength: 2
				},
				"request_class[when]": {
					required: true,
					minlength: 2
				}
			}
		});
	});