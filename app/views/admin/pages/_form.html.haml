= form_for [:admin, @page], :html => { :multipart => true } do |f|
	= f.error_messages

	.field
		= f.label :name
		%br/
		= f.text_field :name
  .field
		= f.label :permalink
		%br/
		= f.text_field :permalink
	.field
		= f.label :content
		%br/
		= f.text_area :content
	.field
		= f.file_field :photo
		%br/

	.actions
		= f.submit
