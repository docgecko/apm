- form_for [:admin, @leadership], :html => { :multipart => true } do |f|
	= f.error_messages

	.field
		= f.label :name
		%br/
		= f.text_field :name
	.field
		= f.label :title
		%br/
		= f.text_field :title
	.field
		= f.label :email
		%br/
		= f.text_field :email
	.field
		= f.label :postion, "Position"
		%br/
		= f.text_field :postion
	.field
		= f.label :content_1
		%br/
		= f.text_area :content_1
	.field
		= f.label :content_2
		%br/
		= f.text_area :content_2
	.field
		= f.file_field :avatar
		%br/

	.actions
		= f.submit
